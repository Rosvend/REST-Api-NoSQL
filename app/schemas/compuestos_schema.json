{
    "validator": {
      "$jsonSchema": {
        "bsonType": "object",
        "required": ["nombre"],
        "properties": {
          "_id": {
            "bsonType": "objectId",
            "description": "ID del compuesto, debe ser un ObjectId"
          },
          "nombre": {
            "bsonType": "string",
            "description": "Nombre del compuesto, debe ser un string"
          }
        }
      }
    }
  }